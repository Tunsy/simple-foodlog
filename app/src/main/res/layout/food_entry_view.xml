<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/food_name_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="FoodNameExample"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/food_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/food_name_entry"
        android:layout_below="@+id/food_name_entry"
        android:text="1 serving"
        android:paddingBottom="3dp"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/food_delete_entry"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/food_edit_entry"
        android:layout_marginEnd="12dp"
        android:background="@android:color/transparent"
        android:tint="@color/materialGray"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

    <ImageButton
        android:id="@+id/food_edit_entry"
        android:layout_width="34dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="59dp"
        android:background="@android:color/transparent"
        android:tint="@color/materialGray"
        app:srcCompat="@drawable/ic_edit_black_24dp" />
</RelativeLayout>